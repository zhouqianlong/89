<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   	android:background="@drawable/file_list_item_back"    
    android:orientation="horizontal"
    android:paddingLeft="6.0dip"
    android:paddingRight="5.0dip"
    android:paddingTop="8.0dip" >

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_wj"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:scaleType="fitXY"
        android:src="@drawable/file_icon" />

    <TextView
        android:id="@+id/tv_file_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_toRightOf="@id/iv_wj"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_file_list_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_file_list_name"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/iv_wj"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_unread_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@android:drawable/sym_action_chat"
        android:gravity="center"
        android:text="2"
        android:textStyle="bold"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="25sp"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/tv_main_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20dp"
   
     />

    <TextView
        android:id="@+id/tv_file_list_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_unread_download"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:singleLine="true"
         android:textColor="@android:color/white"
        android:textSize="20dp" />

</RelativeLayout>