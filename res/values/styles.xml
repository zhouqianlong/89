<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="mystyle" parent="android:Animation">  
        <item name="@android:windowEnterAnimation">@anim/head_in</item>  //进入时的动画   
        <item name="@android:windowExitAnimation">@anim/head_out</item>    //退出时的动画   
    </style>  
    
    
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>    </style>
        
    
    
    
    <style name="RedGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#66000000</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="D6_Font">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff727475</item>
        <item name="android:shadowColor">#ccffffff</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A1_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A2_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A3_Font">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="B4_Font">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/common_text_color_333333_white</item>
    </style>

    <style name="B3_Font">
        <item name="android:textColor">#ff0e0e0e</item>
    </style>

    <style name="B4_Font_white">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/common_text_color_333333_white</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar"></style>

    <style name="Choose_Directory" parent="@style/AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
</resources>
